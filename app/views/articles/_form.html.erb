 <div class="container my-5">
    <div class="row">
      <div class="col-md-6 mx-auto">
        <div class="card shadow p-3 bg-white rounded">
          <%= form_with model: article, class: "mt-3" do |f| %>
            <div class="mb-3">
            <strong>  <%= f.label :title, class: "form-label" %> </strong>
              <%= f.text_field :title, class: "form-control" %>
            </div>
            <div class="mb-3">
             <strong> <%= f.label :content, class: "form-label" %></strong>
              <%= f.text_area :content, class: "form-control fixed-textarea" %>
            </div>
            <%= f.submit "Create Article", class: "btn btn-primary" %>
          <% end %>
        </div>
        <hr class="my-4">
        <div class="text-center">
          <%= link_to raw('<i class="fas fa-backward"></i> Back to list'), articles_path, class: "link btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
